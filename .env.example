# Solana RPC URL (mainnet)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Private key — use ONE of the two options below:
#
# Option 1: Inline key (base58 from Phantom, or JSON array from solana-keygen)
PRIVATE_KEY=your_private_key_here
#
# Option 2: Path to key file (more secure — supports chmod 600)
# PRIVATE_KEY_PATH=./keys/wallet.json

# Amount of SOL to spend on the swap
BUY_AMOUNT_SOL=0.01

# Slippage tolerance in basis points (100 = 1%, 500 = 5%)
SLIPPAGE_BPS=500

# Priority fee in lamports ("auto" or a number, e.g. 100000)
PRIORITY_FEE=auto

# Max allowed BUY_AMOUNT_SOL (safety cap, default 10)
MAX_BUY_SOL=10
